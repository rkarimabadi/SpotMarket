

@if (Data != null && Data.Items.Any())
{
    <div class="conditions-widget">
        <div class="widget-header">
            <h3 class="widget-title">@Title</h3>
            <h4 class="widget-subtitle">@Subtitle</h4>
        </div>
        <div class="conditions-grid">
            @foreach (var item in Data.Items)
            {
                <div class="condition-box">
                    <div class="box-header">
                        <div class="box-icon @item.IconBgCssClass">
                            <i class="@item.IconCssClass"></i>
                        </div>
                        <span>@item.Title</span>
                    </div>
                    <div class="box-value @GetValueCssClass(item.ValueState) @(string.IsNullOrEmpty(item.Unit) ? "ltr" : "")">
                        @item.Value
                        @if (!string.IsNullOrEmpty(item.Unit))
                        {
                            <span class="unit ms-2">@item.Unit</span>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public string Title { get; set; } = "شرایط بازار";
    [Parameter] public string Subtitle { get; set; } = "براساس عرضه‌های روز";
    [Parameter]
    public MarketConditionsData? Data { get; set; }

    protected override void OnInitialized()
    {
        // داده‌های نمونه برای نمایش، در حالت واقعی این بخش باید از سرویس پر شود
        if (Data == null)
        {
            Data = new MarketConditionsData
                {
                    Items = new List<MarketConditionItem>
                    {
                        new() { Title = "ارزش معاملات", Value = "۵.۸", Unit = "همت", IconCssClass = "bi bi-cash-stack", IconBgCssClass = "value" },
                        new() { Title = "حجم معاملات", Value = "۸۴.۵", Unit = "هزار تن", IconCssClass = "bi bi-truck", IconBgCssClass = "volume" },
                        new() { Title = "شاخص رقابت", Value = "+۱۲.۵٪", IconCssClass = "bi bi-fire", IconBgCssClass = "competition", ValueState = ValueState.Positive },
                        new() { Title = "قدرت تقاضا", Value = "۱.۸x", IconCssClass = "bi bi-people", IconBgCssClass = "demand" }
                    }
                };
        }
    }

    private string GetValueCssClass(ValueState state) => state switch
    {
        ValueState.Positive => "positive",
        ValueState.Negative => "negative",
        _ => ""
    };
}
