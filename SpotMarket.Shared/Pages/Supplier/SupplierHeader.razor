
@inject ISupplierService SupplierService
@if (data != null)
{
    <div class="supplier-header-container">
        <div class="header-icon">
            <i class="bi bi-buildings-fill"></i>
        </div>
        <div class="header-info">
            <h1 class="supplier-name">@data.SupplierName</h1>
            <h2 class="page-title">تحلیل عملکرد عرضه‌کننده</h2>
        </div>
    </div>
}

@code {
    [Parameter] public int SupplierId { get; set; }
    [Parameter] public EventCallback<SupplierHeaderData> OnDataReceived { get; set; }
    private SupplierHeaderData? data { get; set; }

    protected override async Task OnInitializedAsync()
    {
        data = await SupplierService.GetSupplierHeaderAsync(SupplierId);
        await OnDataReceived.InvokeAsync(data);
    }
}
