@inject IBrokerService BrokerService
@if (data != null && data.Any())
{
    <div class="market-share-widget">
        <div class="widget-header">
            <h3 class="widget-title">@Title</h3>
        </div>
        <div class="cards-container">
            @foreach (var item in data)
            {
                <div class="market-share-card @item.ThemeCssClass">
                    <div class="card-icon">
                        <i class="@item.IconCssClass"></i>
                    </div>
                    <div class="card-info">
                        <span class="title">@item.Title</span>
                        <span class="value">@item.Value</span>
                    </div>
                    <div class="card-subtitle">
                        @item.Subtitle
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public string Title { get; set; } = "سهم از بازار";
    [Parameter] public int BrokerId { get; set; }
    private List<MarketShareItem>? data;
    protected override async Task OnInitializedAsync()
    {
        data = await BrokerService.GetMarketShareAsync(BrokerId);
    }
}
