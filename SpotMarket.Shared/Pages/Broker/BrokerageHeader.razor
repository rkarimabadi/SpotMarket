@inject IBrokerService BrokerService
@if(data != null) {
<div class="brokerage-header-container">
    <div class="brokerage-icon">
        <i class="bi bi-buildings-fill"></i>
    </div>
    <div class="brokerage-info">
        <h1 class="brokerage-name">@data.BrokerName</h1>
        <h2 class="page-title">تحلیل عملکرد</h2>
    </div>
</div>
}
@code {
    [Parameter] public int BrokerId { get; set; }
    [Parameter] public EventCallback<BrokerHeaderData> OnDataReceived { get; set; }
    private BrokerHeaderData? data;
    protected override async Task OnInitializedAsync()
    {
        data = await BrokerService.GetBrokerHeaderAsync(BrokerId);
        await OnDataReceived.InvokeAsync(data);
    }
}