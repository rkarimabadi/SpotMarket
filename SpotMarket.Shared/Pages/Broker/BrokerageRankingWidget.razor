@inject IBrokerService BrokerService
@if (data != null && data.Any())
{
    <div class="ranking-widget">
        <div class="widget-header">
            <h3 class="widget-title">@Title</h3>
        </div>
        <div class="ranking-list">
            @foreach (var item in data)
            {
                <div class="ranking-item">
                    <div class="item-icon @item.ThemeCssClass">
                        <i class="@item.IconCssClass"></i>
                    </div>
                    <div class="item-info">
                        <span class="title">@item.Title</span>
                        <span class="subtitle">@item.Subtitle</span>
                    </div>
                    <div class="item-rank">
                        <span class="rank-value">@item.Rank</span>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public string Title { get; set; } = "جایگاه در بازار";
    [Parameter] public int BrokerId { get; set; }
    private List<RankingItem>? data;
    protected override async Task OnInitializedAsync()
    {
        data = await BrokerService.GetRankingAsync(BrokerId);
    }

}
