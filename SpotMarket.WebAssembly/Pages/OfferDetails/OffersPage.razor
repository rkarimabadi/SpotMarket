    {
        offer = await DataService.GetOfferByIdAsync(offerId);
    }
    private string deliveryDue
    {
        get
        {
            var offerDate = offer.OfferDate.GetGregorian();
            var deliveryDate = offer.DeliveryDate.GetGregorian();
            return $"{(deliveryDate - offerDate).Days}";
        }
    }
