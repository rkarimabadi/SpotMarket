@page "/offers/{offerId:int}"
@using SpotMarket.WebAssembly.Helpers
@using SpotMarket.WebAssembly.Services.Presentation
@inject IOfferDetailsService DataService
<div class="page-container">
    @if (offer == null)
    {
        <p>در حال بارگذاری اطلاعات...</p>
    }
    else
    {
        <PageTitle>اطلاعیه عرضه @offer?.CommodityName</PageTitle>
        <OfferHeader Ring="@offer.OfferRing" CommodityName="@offer.CommodityName" Symbol="@offer.Symbol" />
        <OfferHierarchy HierarchyItems="@offer.HierarchyItems" />
        <OfferConditionsWidget Data="OfferMetrics" />
        <OfferAttributesWidget Data="offerAttribute" />
        <OfferMainPlayersWidget Players="players" />
        <OfferCompassWidget Offer="offer"/>
        <OfferDetailsWidget Data="OfferDetails" />
        <OfferDescription Offer="offer" />
    }
</div>

