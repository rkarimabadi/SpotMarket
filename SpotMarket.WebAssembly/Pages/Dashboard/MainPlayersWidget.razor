@if (Players?.Any() == true)
{
    <div class="section-header">
        <h2 class="section-title">@Title</h2>
    </div>

    <div class="players-grid" style="grid-template-columns: repeat(@Players.Count, 1fr);">
        @foreach (var player in Players)
        {
            <div class="player-card">
                <div class="player-icon"><i class="@player.IconCssClass"></i></div>
                <div class="player-title">@player.Type</div>
                <div class="player-name">@player.Name</div>
                <div class="player-share">@player.MarketShare.ToString("0.0")%</div>
            </div>
        }
    </div>
}

@code {
    /// <summary>
    /// عنوانی که در بالای ویجت نمایش داده می‌شود
    /// </summary>
    [Parameter]
    public string Title { get; set; } = "بازیگران اصلی";

    /// <summary>
    /// لیستی از بازیگران برای نمایش در ویجت
    /// </summary>
    [Parameter]
    public List<MainPlayer>? Players { get; set; }
}
