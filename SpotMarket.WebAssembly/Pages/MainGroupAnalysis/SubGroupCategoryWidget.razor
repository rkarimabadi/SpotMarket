@* این کامپوننت یک دسته از گروه‌های زیرمجموعه را با عنوان مشخص نمایش می‌دهد *@

@if (Items is not null && Items.Any())
{
    <div class="subgroup-category">
        <div class="category-header">
            <i class="bi @Icon"></i>
            <h3 class="category-title">@Title</h3>
        </div>
        <div class="subgroup-list">
            @foreach (var item in Items)
            {
                <div class="subgroup-item">
                    <div class="item-info">
                        <div class="title">@item.Title</div>
                        <div class="subtitle">@item.Subtitle</div>
                    </div>
                    <div class="item-stat @item.StatCssClass">@item.Stat</div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public List<SubGroupItem>? Items { get; set; }
}
