<div class="stats-row-widget">
    <div class="widget-header">
        <h3 class="widget-title">آمار فوری بازار</h3>
    </div>
    <div class="stats-container">
        @* باکس اول: رقابت فولاد *@
        <div class="stat-box">
            <div class="box-icon steel">
                <i class="bi bi-graph-up-arrow"></i>
            </div>
            <div class="box-info">
                <span class="value positive">+۱۲.۵٪</span>
                <span class="label">رقابت فولاد</span>
            </div>
        </div>

        @* باکس دوم: تقاضای مس *@
        <div class="stat-box">
            <div class="box-icon copper">
                <i class="bi bi-people-fill"></i>
            </div>
            <div class="box-info">
                <span class="value">۲.۵x</span>
                <span class="label">تقاضای مس</span>
            </div>
        </div>

        @* باکس سوم: جذب سیمان *@
        <div class="stat-box">
            <div class="box-icon cement">
                <i class="bi bi-check2-circle"></i>
            </div>
            <div class="box-info">
                <span class="value negative">۷۸٪</span>
                <span class="label">جذب سیمان</span>
            </div>
        </div>
    </div>
</div>

