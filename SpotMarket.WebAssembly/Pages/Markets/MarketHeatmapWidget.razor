@inject IMarketsService MarketService
@inject NavigationManager NavigationManager
@if (data != null && data.Items.Any())
{
    <div class="widget-container">
        <div class="section-header">
            <h3 class="section-title">@Title</h3>
            <h4 class="section-subtitle">@Subtitle</h4>
        </div>
        <div class="heatmap-grid">
            @{
                var highItems = data.Items.Where(i => i.Rank == MarketHeatRank.High).ToList();
                var mediumItems = data.Items.Where(i => i.Rank == MarketHeatRank.Medium).ToList();
                var lowItems = data.Items.Where(i => i.Rank == MarketHeatRank.Low).ToList();
                var neutralItems = data.Items.Where(i => i.Rank == MarketHeatRank.Neutral).ToList();
            }

            <!-- جایگاه‌های رتبه High -->
            @if (highItems.Count > 0)
            {
                        <div class="heatmap-tile high tile-steel" @onclick="() => GoTo(highItems[0].Code)">
                    <div class="large-tile-content">
                        <span class="title">@highItems[0].Title</span>
                        <span class="value ltr">@highItems[0].Value</span>
                        <span class="subtitle">@highItems[0].Subtitle</span>
                    </div>
                </div>
            }
            @if (highItems.Count > 1)
            {
                <div class="heatmap-tile high tile-petro tile-sm-rotate" @onclick="() => GoTo(highItems[1].Code)">
                    @* محتوای داخلی برای کارت عمودی بهینه شده است *@
                    <div class="vertical-tile-content">
                        <span class="title">@highItems[1].Title</span>
                        <span class="value">@highItems[1].Value</span>
                    </div>
                </div>
            }

            <!-- جایگاه‌های رتبه Medium -->
            @if (mediumItems.Count > 0)
            {
                        <div class="heatmap-tile medium tile-cement" @onclick="() => GoTo(mediumItems[0].Code)">
                    @* محتوای داخلی برای کارت افقی بهینه شده است *@
                    <div class="horizontal-bar-content">
                        <div class="info">
                            <span class="title">@mediumItems[0].Title</span>
                            <span class="ms-2 subtitle">@mediumItems[0].Subtitle</span>
                        </div>
                        <div class="value">@mediumItems[0].Value</div>
                    </div>
                </div>
            }
            @if (mediumItems.Count > 1)
            {
                        <div class="heatmap-tile medium tile-xs-rotate" @onclick="() => GoTo(mediumItems[1].Code)">@mediumItems[1].Title</div>
            }

            <!-- جایگاه‌های باقی‌مانده -->
            @if (lowItems.Count > 0)
            {
                        <div class="heatmap-tile low tile-xs-rotate" @onclick="() => GoTo(lowItems[0].Code)">@lowItems[0].Title</div>
            }
            @if (neutralItems.Count > 0)
            {
                <div class="heatmap-tile neutral tile-xs-rotate" @onclick="() => GoTo(neutralItems[0].Code)">@neutralItems[0].Title</div>
            }
            @if (lowItems.Count > 1)
            {
                <div class="heatmap-tile low tile-sm-rotate" @onclick="() => GoTo(lowItems[1].Code)">@lowItems[1].Title</div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public string Title { get; set; } = "نقشه حرارتی بازار";
    [Parameter] public string Subtitle { get; set; } = "برحسب داده‌های عرضه";
    private MarketHeatmapData? data;
    protected override async Task OnInitializedAsync()
    {
       data = await MarketService.GetMarketHeatmapData();
    }
    private void GoTo(int name)
    {
        NavigationManager.NavigateTo($"/markets/{name}");
    }
}
