                },
                // ۴. نوع تضمین
                new() {
                    Title = "نوع تضمین",
                    IconCssClass = "bi bi-shield-lock-fill",
                    IconBgCssClass = "icon-bg-red",
                    ValueDistribution = new List<AttributeValueShare>
                    {
                        new() { Name = "عادی", Percentage = 100, ColorCssClass = "color-red" },
                    },
