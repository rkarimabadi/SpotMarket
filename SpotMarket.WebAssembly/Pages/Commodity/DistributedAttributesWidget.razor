@using SpotMarket.WebAssembly.Models.Presentation

<div class="dist-attributes-widget">
    @if (Data != null && Data.Items.Any())
    {
        <div class="attributes-grid">
            @foreach (var item in Data.Items)
            {
                <div class="attribute-card @(item.IsAlert ? "alert-state" : "")">
                    <div class="card-header">
                        <div class="icon-wrapper @item.IconBgCssClass">
                            <i class="@item.IconCssClass"></i>
                        </div>
                        <span class="title">@item.Title</span>
                    </div>
                    <div class="card-body">
                        <div class="stacked-bar">
                            @foreach (var share in item.ValueDistribution)
                            {
                                <div class="bar-segment @share.ColorCssClass" style="width: @(share.Percentage)%"></div>
                            }
                        </div>
                        <div class="legend">
                            @foreach (var share in item.ValueDistribution)
                            {
                                <div class="legend-item">
                                    <span class="legend-dot @share.ColorCssClass"></span>
                                    <span class="legend-name">@share.Name</span>
                                    <span class="legend-percentage">@(share.Percentage.ToString("N0"))%</span>
                                </div>
                            }
                        </div>
                        <p class="interpretation">@item.Interpretation</p>
                        @if (item.IsAlert)
                        {
                            <div class="alert-details">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <span>مقدار غالب یعنی <strong>@item.DominantValue</strong> با مقدار آخرین عرضه یعنی <strong>@item.MarketMostCommonValue</strong> متفاوت است.</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public DistributedAttributesData? Data { get; set; }
}
