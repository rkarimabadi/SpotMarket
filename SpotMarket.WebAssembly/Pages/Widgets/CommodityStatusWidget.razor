@using SpotMarket.WebAssembly.Models.Presentation

<div class="widget-container">
    <div class="section-header">
        <h3 class="section-title">@Title</h3>
    </div>
    <div class="data-card">
        @if (Data != null && Data.Items.Any())
        {
            foreach (var item in Data.Items)
            {
                <div class="commodity-item">
                    <div class="item-info">
                        <div class="title">@item.Name</div>
                        <div class="subtitle">@item.MainGroupName</div>
                    </div>
                    <div class="item-stat">
                        <span class="offer-count">@item.OfferCount اطلاعیه</span>
                        <div class="demand-indicator @GetDemandStatusCssClass(item.DemandStatus)">
                            <div class="bar"></div>
                            <div class="bar"></div>
                            <div class="bar"></div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="p-4 text-center text-secondary">داده‌ای برای نمایش وجود ندارد.</div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "وضعیت گروه‌های کالایی";

    [Parameter]
    public CommodityStatusData? Data { get; set; }

    protected override void OnInitialized()
    {
        // Sample data for demonstration
        if (Data == null)
        {
            Data = new CommodityStatusData
                {
                    Items = new List<CommodityStatusItem>
                {
                    new() { Name = "ضایعات فولاد", MainGroupName = "صنعتی", OfferCount = 5, DemandStatus = DemandStatus.High },
                    new() { Name = "نقره", MainGroupName = "صنعتی", OfferCount = 2, DemandStatus = DemandStatus.Medium },
                    new() { Name = "زعفران", MainGroupName = "کشاورزی", OfferCount = 12, DemandStatus = DemandStatus.Low },
                    new() { Name = "خودرو", MainGroupName = "صنعتی", OfferCount = 0, DemandStatus = DemandStatus.Medium },
                    new() { Name = "سنگ آهن", MainGroupName = "معدنی", OfferCount = 8, DemandStatus = DemandStatus.High },
                    new() { Name = "ورق فولادی", MainGroupName = "صنعتی", OfferCount = 15, DemandStatus = DemandStatus.High },
                    new() { Name = "روی", MainGroupName = "صنعتی", OfferCount = 3, DemandStatus = DemandStatus.Medium },
                    new() { Name = "شیمیایی", MainGroupName = "پتروشیمی", OfferCount = 22, DemandStatus = DemandStatus.Low },
                    new() { Name = "قیر خالص", MainGroupName = "فرآورده های نفتی", OfferCount = 7, DemandStatus = DemandStatus.Medium },
                    new() { Name = "پلیمر", MainGroupName = "پتروشیمی", OfferCount = 31, DemandStatus = DemandStatus.High },
                }
                };
        }
    }

    private string GetDemandStatusCssClass(DemandStatus status) => status switch
    {
        DemandStatus.High => "status-high",
        DemandStatus.Low => "status-low",
        _ => "status-medium"
    };
}
