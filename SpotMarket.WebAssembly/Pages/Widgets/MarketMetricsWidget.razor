@* الهام گرفته از ویجت‌های برنامه Measure و Calculator اپل *@

<div class="metrics-widget">
    <div class="widget-header">
        <h3 class="widget-title">مقیاس بازار</h3>
    </div>
    <div class="metrics-grid">
        @* مقیاس اول: ورق گرم *@
        <div class="metric-box">
            <div class="metric-header">
                <i class="bi bi-layers"></i>
                <span>ورق گرم</span>
            </div>
            <div class="metric-value positive">+۵.۲٪</div>
            <div class="metric-label">شاخص رقابت</div>
        </div>

        @* مقیاس دوم: میلگرد *@
        <div class="metric-box">
            <div class="metric-header">
                <i class="bi bi-rulers"></i>
                <span>میلگرد</span>
            </div>
            <div class="metric-value positive">+۸.۹٪</div>
            <div class="metric-label">شاخص رقابت</div>
        </div>

        @* مقیاس سوم: شمش *@
        <div class="metric-box">
            <div class="metric-header">
                <i class="bi bi-box-seam"></i>
                <span>شمش</span>
            </div>
            <div class="metric-value negative">-۱.۴٪</div>
            <div class="metric-label">جذب عرضه</div>
        </div>

        @* مقیاس چهارم: سیمان *@
        <div class="metric-box">
            <div class="metric-header">
                <i class="bi bi-cone-striped"></i>
                <span>سیمان</span>
            </div>
            <div class="metric-value">۱.۱x</div>
            <div class="metric-label">قدرت تقاضا</div>
        </div>
    </div>
</div>

